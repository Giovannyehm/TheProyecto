@model IEnumerable<TheProyecto.Models.usuariorol>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @TheProyecto.Controllers.UsuarioRolController.NombreUsuario(item.idUsuario)
            </td>
            <td>
                @TheProyecto.Controllers.UsuarioRolController.NombreRol(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(fuction(event) {
            if(!confirm("Estas seguro de eliminar?" + "Esta opcion no se puede deshacer")){
            event.preventDefault();
        }
        })
    </script>
}
